{
  "name": "notion-roll",
  "version": "0.1.0",
  "description": "Node library for simplified Notion API interactions with markdown support",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "notion",
    "api",
    "markdown"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "dotenv": "^17.2.3"
  }
}
